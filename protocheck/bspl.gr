@@eol_comments :: ?/‌‌#|(//).*?$/?

document = {protocol ~ }+ $;

protocol = type:`protocol` name:word '{' ~ 'roles' roles:roles 'parameters' parameters:params references:references '}';

roles = ','.{role} ;
role = name:word ;

params = ','.{param} ;
param = [adornment:adornment] name:word [key:'key'];
